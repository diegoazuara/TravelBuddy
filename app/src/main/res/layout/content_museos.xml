<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_museos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.mario.dispositivosmoviles.museos">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/museo_del_acero"
            android:src="@drawable/museo_del_acero"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="56dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Museo del Acero"
            android:id="@+id/textView4001"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#8c198c"
            android:textAlignment="center"
            android:layout_alignTop="@+id/museo_del_acero"
            android:layout_alignBottom="@+id/museo_del_acero"
            android:layout_margin="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/museo_del_acero"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/museo_de_historia"
            android:src="@drawable/museo_de_historia"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/museo_del_acero"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Museo de Historia Mexicana"
            android:id="@+id/textView4002"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:background="#a64ca6"
            android:textAlignment="center"
            android:layout_alignTop="@+id/museo_de_historia"
            android:layout_alignBottom="@+id/museo_de_historia"
            android:layout_margin="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/museo_de_historia"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/marco"
            android:src="@drawable/marco"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/museo_de_historia"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marco"
            android:id="@+id/textView4003"
            android:paddingTop="58dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#8c198c"
            android:textAlignment="center"
            android:layout_alignTop="@+id/marco"
            android:layout_alignBottom="@+id/marco"
            android:layout_margin="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/marco"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/museo_del_noreste"
            android:src="@drawable/museo_del_noreste"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/marco"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Museo del Noreste"
            android:id="@+id/textView4004"
            android:paddingTop="50dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#a64ca6"
            android:textAlignment="center"
            android:layout_alignTop="@+id/museo_del_noreste"
            android:layout_alignBottom="@+id/museo_del_noreste"
            android:layout_margin="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/museo_del_noreste"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/planetario_alfa"
            android:src="@drawable/planetario_alfa"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/museo_del_noreste"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planetario Alfa"
            android:id="@+id/textView4005"
            android:paddingTop="50dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#8c198c"
            android:textAlignment="center"
            android:layout_alignTop="@+id/planetario_alfa"
            android:layout_alignBottom="@+id/planetario_alfa"
            android:layout_margin="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/planetario_alfa"/>

    </RelativeLayout>
</ScrollView>
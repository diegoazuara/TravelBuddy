<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_info_four_points"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mario.dispositivosmoviles.infoFourPoints"
    tools:showIn="@layout/activity_info_four_points">

    <Button
        android:text="VER EN MAPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button30"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Four Points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView199"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textAlignment="center"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/four_points_ed"
        android:id="@+id/imageView29"
        android:layout_below="@+id/textView199"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Este hotel moderno, ubicado a 4 minutos a pie del centro comercial Galerías Monterrey, está a 7 km del Museo de Arte Contemporáneo de Monterrey y a 14 km del Parque Fundidora. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView200"
        android:textColor="#000"
        android:textSize="18sp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/imageView29"
        />

    <TextView
        android:text="Dirección:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView203"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"

        android:layout_below="@+id/textView202"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:text="Lunes a Viernes. Todos los dias del año."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView202"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_below="@+id/textView200"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="Horario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView201"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal|bold"


        android:layout_alignBottom="@+id/textView200"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Av Insurgentes 3961, Sin Nombre de Col 31, 64640 Monterrey, N.L."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView204"
        android:textColor="#000"
        android:textSize="18sp"

        android:layout_below="@+id/textView203"
        android:layout_alignParentStart="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mario.dispositivosmoviles.infoGaleriaCafe"
    tools:showIn="@layout/activity_info_galeria_cafe">


    <TextView
        android:text="La Galería Café"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:id="@+id/textView66"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"/>

    <TextView
        android:text="Calle Diego De Montemayor 902, Centro, 64000 Monterrey, N.L. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView67"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:text="Dirección:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView68"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/textView67"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="42dp"/>

    <TextView
        android:text="Martes a Domingo de 5:00pm a 12:00am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView69"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_above="@+id/textView68"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="19dp"/>

    <TextView
        android:text="Horario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView70"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_above="@+id/textView69"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="Cafetería con extensa variedad de bebidas. Ambiente tranquilo. Especialidad en pastas y crepas. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView71"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_above="@+id/textView70"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:paddingBottom="0dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:src="@drawable/galeriacafe_ed"
        android:id="@+id/imageView8"
        android:paddingBottom="40dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/textView66"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="VER EN MAPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
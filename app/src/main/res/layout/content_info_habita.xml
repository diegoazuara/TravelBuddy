<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_info_habita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mario.dispositivosmoviles.infoHabita"
    tools:showIn="@layout/activity_info_habita">


    <TextView
        android:text="Habita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView193"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/habita_ed"
        android:id="@+id/imageView28"
        android:layout_below="@+id/textView193"
        android:layout_alignParentStart="true" />


    <Button
        android:text="VER EN MAPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button29"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Av. José Vasconcelos 150 Ote, Del Valle, 66220"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView198"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_below="@+id/textView197"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="


El único hotel de diseño en el norte del país. Ubicado en la zona residencial de San Pedro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView194"
        android:textColor="#000"
        android:textSize="18sp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="112dp"
        android:layout_above="@+id/button29"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Horario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView195"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/imageView28"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp" />

    <TextView
        android:text="Lunes a Domingo. Todos los dias del año."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView196"
        android:textSize="18sp"
        android:textColor="#000"

        android:layout_below="@+id/textView195"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Dirección:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView197"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView196"
        android:layout_alignParentStart="true" />

</RelativeLayout>

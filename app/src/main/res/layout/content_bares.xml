<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mario.dispositivosmoviles.bares"
    tools:showIn="@layout/activity_bares">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/sr_mostacho"
        android:src="@drawable/sr_mostacho"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sr. Mostacho"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/sr_mostacho"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sr_mostacho"
        android:layout_alignBottom="@+id/sr_mostacho"
        android:textColor="#000"
        android:textAlignment="center"
        android:paddingTop="60dp"
        android:textSize="18sp"
        android:background="#ff8000" />
</RelativeLayout>

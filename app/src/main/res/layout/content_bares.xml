<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mario.dispositivosmoviles.bares"
    tools:showIn="@layout/activity_bares">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/sr_mostacho"
        android:src="@drawable/sr_mostacho"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="2dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sr. Mostacho"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/sr_mostacho"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sr_mostacho"
        android:layout_alignBottom="@+id/sr_mostacho"
        android:textColor="#fff"
        android:textAlignment="center"
        android:paddingTop="60dp"
        android:textSize="25dp"
        android:background="#343036"

        android:layout_marginLeft="2dp"
        />

</RelativeLayout>

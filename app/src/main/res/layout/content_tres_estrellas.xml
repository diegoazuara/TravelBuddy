<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".tresEstrellas"
        tools:showIn="@layout/activity_tres_estrellas"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/best_western"
            android:src="@drawable/best_western"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="56dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Best Western"
            android:id="@+id/textView205"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#1a6bff"
            android:textAlignment="center"
            android:layout_alignTop="@+id/best_western"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/best_western"
            android:layout_above="@+id/textView206"
            android:layout_margin="2dp"
            android:width="100dp" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/quality_inn"
            android:src="@drawable/quality_inn"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/best_western"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Quality Inn"
            android:id="@+id/textView206"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#4d8cff"
            android:textAlignment="center"
            android:layout_alignTop="@+id/quality_inn"
            android:layout_alignBottom="@+id/quality_inn"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/quality_inn" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/city_express"
            android:src="@drawable/city_express"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/quality_inn"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="City Express"
            android:id="@+id/textView207"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#1a6bff"
            android:textAlignment="center"
            android:layout_alignTop="@+id/city_express"
            android:layout_alignBottom="@+id/city_express"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/city_express" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/lq_hotel"
            android:src="@drawable/lq_hotel"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/city_express"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="La Quinta"
            android:id="@+id/textView208"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#4d8cff"
            android:textAlignment="center"
            android:layout_alignTop="@+id/lq_hotel"
            android:layout_alignBottom="@+id/lq_hotel"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/lq_hotel" />

    </RelativeLayout>
</ScrollView>
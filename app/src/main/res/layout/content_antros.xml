<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".antros"
    tools:showIn="@layout/activity_antros">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/dclub"
        android:src="@drawable/dclub"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:padding="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="D Club"
        android:id="@+id/textView8"
        android:paddingTop="60dp"
        android:textColor="#fff"
        android:textSize="25dp"
        android:background="#221f23"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/dclub"
        android:layout_alignBottom="@+id/dclub"
        android:layout_alignParentTop="true"
        android:textAlignment="center" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/maddox"
        android:src="@drawable/maddox"
        android:background="#fff"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:layout_below="@+id/dclub"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Maddox"
        android:id="@+id/textView11"
        android:paddingTop="60dp"
        android:textColor="#fff"

        android:textSize="25dp"
        android:background="#110f11"
        android:textAlignment="center"
        android:layout_below="@+id/textView8"
        android:layout_alignBottom="@+id/maddox"
        android:layout_alignEnd="@+id/textView8"
        android:layout_toEndOf="@+id/dclub" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/republica"
        android:src="@drawable/republica"
        android:background="#fff"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:layout_below="@+id/maddox"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Republica"
        android:id="@+id/textView12"
        android:paddingTop="60dp"
        android:textColor="#fff"
        android:textSize="25dp"
        android:background="#221f23"
        android:textAlignment="center"
        android:layout_alignTop="@+id/republica"
        android:layout_alignBottom="@+id/republica"
        android:layout_alignEnd="@+id/textView11"
        android:layout_toEndOf="@+id/republica" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_info_museo_del_acero"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mario.dispositivosmoviles.infoMuseoDeHistoria"
    tools:showIn="@layout/activity_info_museo_de_historia">


    <TextView
        android:text="Museo De Historia Mexicana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4012"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="1000dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/museo_de_historia_ed"
        android:id="@+id/imageView101"
        android:layout_below="@+id/textView4012"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Horario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4014"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView4013"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Marte, domingo: 10am - 8pm                        Miercoles, jueves, viernes: 10am - 6pm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4015"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_below="@+id/textView4014"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Dirección:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4016"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView4015"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:text="Calle Doctor José Ma. Coss 445, Centro, 64000 Monterrey, N.L."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4017"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4016"
        android:layout_marginBottom="32dp" />

    <Button
        android:text="VER EN MAPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button36"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="El Museo de Historia Mexicana es la exhibición histórica más importante en el norte de México. Está conformada por más de 1,200 piezas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4013"
        android:textColor="#000"
        android:textSize="18sp"
        android:paddingBottom="20dp"
        android:layout_below="@+id/imageView101"
        android:layout_alignParentStart="true" />

</RelativeLayout>

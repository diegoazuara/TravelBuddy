<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <RelativeLayout
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".cuatroEstrellas"
        tools:showIn="@layout/activity_cuatro_estrellas"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/holiday_inn"
            android:src="@drawable/holiday_inn"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="56dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Holiday Inn"
            android:id="@+id/textView177"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#1a6bff"
            android:textAlignment="center"
            android:layout_alignTop="@+id/holiday_inn"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/holiday_inn"
            android:layout_above="@+id/textView178"
            android:layout_margin="2dp"
            android:width="100dp" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/antaris"
            android:src="@drawable/antaris"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/holiday_inn"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Antaris"
            android:id="@+id/textView178"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#4d8cff"
            android:textAlignment="center"
            android:layout_alignTop="@+id/antaris"
            android:layout_alignBottom="@+id/antaris"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/antaris" />





        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/habita"
            android:src="@drawable/habita"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/antaris"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Habita"
            android:id="@+id/textView179"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#1a6bff"
            android:textAlignment="center"
            android:layout_alignTop="@+id/habita"
            android:layout_alignBottom="@+id/habita"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/habita" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/four_points"
            android:src="@drawable/four_points"
            android:background="#fff"
            android:scaleType="fitXY"
            android:padding="2dp"
            android:layout_below="@+id/habita"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Four Points"
            android:id="@+id/textView180"
            android:paddingTop="60dp"
            android:textColor="#fff"
            android:textSize="25dp"
            android:background="#4d8cff"
            android:textAlignment="center"
            android:layout_alignTop="@+id/four_points"
            android:layout_alignBottom="@+id/four_points"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/four_points" />



    </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
    >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mario.dispositivosmoviles.plazasComerciales"
    tools:showIn="@layout/activity_plazas_comerciales">


    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/plazacumbres"
        android:src="@drawable/plazacumbres2"
        android:background="#fff"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plaza Cumbres"
        android:id="@+id/textView17"
        android:paddingTop="60dp"
        android:textColor="#fff"
        android:textSize="25dp"
        android:background="#ff9800"
        android:textAlignment="center"
        android:layout_alignTop="@+id/plazacumbres"
        android:layout_alignBottom="@+id/plazacumbres"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/plazacumbres"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/nuevosur"
        android:src="@drawable/nuevosur2"
        android:background="#fff"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:layout_below="@+id/plazacumbres"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Sur"
        android:id="@+id/textView18"
        android:paddingTop="60dp"
        android:textColor="#fff"
        android:textSize="25dp"
        android:background="#4caf50"
        android:textAlignment="center"
        android:layout_alignTop="@+id/nuevosur"
        android:layout_alignBottom="@+id/nuevosur"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/nuevosur"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/sanagustin"
        android:src="@drawable/sanagustin2"
        android:background="#fff"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:layout_below="@+id/nuevosur"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plaza Fiesta San Agustín"
        android:id="@+id/textView19"
        android:paddingTop="45dp"
        android:textColor="#fff"
        android:textSize="25dp"
        android:background="#ff9800"
        android:textAlignment="center"
        android:layout_alignTop="@+id/sanagustin"
        android:layout_alignBottom="@+id/sanagustin"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sanagustin"/>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/valleoriente"
        android:src="@drawable/valleoriente2"
        android:background="#fff"
        android:scaleType="fitXY"
        android:padding="2dp"
        android:layout_below="@+id/sanagustin"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Galerías Valle Oriente"
        android:id="@+id/textView20"
        android:paddingTop="45dp"
        android:textColor="#fff"
        android:textSize="25dp"
        android:background="#4caf50"
        android:textAlignment="center"
        android:layout_alignTop="@+id/valleoriente"
        android:layout_alignBottom="@+id/valleoriente"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/valleoriente"/>



</RelativeLayout>
</ScrollView>

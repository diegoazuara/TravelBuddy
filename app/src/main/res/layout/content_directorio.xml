<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_directorio"
        android:background="#259494"
        android:layout_width="370dp"
        android:layout_height="570dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.mario.dispositivosmoviles.directorio">


        <ImageButton
            android:layout_width="360dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/servicios"
            android:id="@+id/servicios"
            android:scaleType="fitXY"
            android:layout_below="@+id/emergencia"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:scaleType="fitXY"
            android:layout_width="360dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/banco"
            android:id="@+id/bancos"
            android:layout_below="@+id/servicios"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="360dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/emergencias"
            android:id="@+id/emergencia"
            android:scaleType="fitXY"
            android:layout_marginTop="86dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mario.dispositivosmoviles.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:layout_width="182dp"
        android:layout_height="170dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/nocturno"
        android:src="@drawable/vida_nocturna"
        android:background="#009FC7"
        android:layout_marginRight="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:text="VIDA NOCTURNA"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/nocturno"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/nocturno"
            android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="182dp"
        android:layout_height="170dp"
        android:id="@+id/restaurants"
        android:src="@drawable/restaurants"
        android:background="#FFB733"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/nocturno"
        android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:text="RESTAURANTES"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/restaurants"
            android:layout_alignEnd="@+id/restaurants"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/nocturno" />

    <ImageButton
        android:layout_width="182dp"
        android:layout_height="170dp"
        android:id="@+id/hoteles"
        android:src="@drawable/hoteles"
        android:background="#FF3434"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_toStartOf="@+id/quehacer"
        android:layout_above="@+id/quevisitar"
        android:layout_below="@+id/nocturno" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:text="HOTELES"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/hoteles"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/hoteles"
            android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="182dp"
        android:layout_height="170dp"
        android:id="@+id/quehacer"
        android:src="@drawable/que_hacer"
        android:background="#ffff4d"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/nocturno"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/contactos"
        android:layout_alignTop="@+id/hoteles" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="¿QUÉ HACER?"
            android:textColor="#000"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_toEndOf="@+id/hoteles" />

    <ImageButton
        android:layout_width="182dp"
        android:layout_height="170dp"
        android:id="@+id/quevisitar"
        android:src="@drawable/que_visitar"
        android:background="#8e3694"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/quehacer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:text="¿QUÉ VISITAR?"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/quevisitar"
            android:layout_alignEnd="@+id/quevisitar"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/contactos"
            android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="182dp"
        android:layout_height="170dp"
        android:id="@+id/contactos"
        android:src="@drawable/directorio"
        android:background="#00C78C"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/quevisitar"
        android:layout_toEndOf="@+id/quevisitar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:text="DIRECTORIO"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15sp"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView5"
            android:layout_toEndOf="@+id/quevisitar" />

</RelativeLayout>

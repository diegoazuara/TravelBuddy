<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mario.dispositivosmoviles.MainActivity"
    tools:showIn="@layout/activity_main">


    <ImageButton
        android:layout_width="183dp"
        android:layout_height="170dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/nocturno"
        android:src="@drawable/nocturno"
        android:background="#c653a9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIDA NOCTURNA"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/nocturno"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/nocturno"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="185dp"
        android:layout_height="170dp"
        android:id="@+id/restaurants"
        android:src="@drawable/restaurants"
        android:layout_alignBottom="@+id/nocturno"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/nocturno"
        android:layout_margin="0dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true"
        android:background="#f0a860" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTAURANTS"
        android:id="@+id/textView2"
        android:layout_alignEnd="@+id/restaurants"
        android:textAlignment="center"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/nocturno"
        android:textColor="#000"
        android:textSize="15sp" />

    <ImageButton
        android:layout_width="183dp"
        android:layout_height="171dp"
        android:id="@+id/hoteles"
        android:src="@drawable/hoteles"
        android:layout_below="@+id/nocturno"
        android:layout_alignStart="@+id/nocturno"
        android:background="#f47196" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOTELES"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/hoteles"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/hoteles"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="171dp"
        android:id="@+id/quehacer"
        android:src="@drawable/quehacer"
        android:layout_alignTop="@+id/hoteles"
        android:layout_toEndOf="@+id/hoteles"
        android:background="#f33f66" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿QUÉ HACER?"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/quehacer"
        android:layout_alignEnd="@+id/quehacer"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/hoteles"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp" />

    <ImageButton
        android:layout_width="185dp"
        android:layout_height="172dp"
        android:id="@+id/quevisitar"
        android:src="@drawable/quevisitar"
        android:layout_below="@+id/hoteles"
        android:layout_alignStart="@+id/hoteles"
        android:background="#a8d878" />

    <ImageButton
        android:layout_width="185dp"
        android:layout_height="172dp"
        android:id="@+id/contactos"
        android:src="@drawable/contactos"
        android:background="#48c0a8"
        android:layout_alignTop="@+id/quevisitar"
        android:layout_toEndOf="@+id/hoteles" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿QUÉ VISITAR?"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/quevisitar"
        android:layout_alignStart="@+id/quevisitar"
        android:layout_toStartOf="@+id/contactos"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DIRECTORIO"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/quevisitar"
        android:layout_alignEnd="@+id/contactos"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/quevisitar"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp" />



</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info_classico"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="com.example.mario.dispositivosmoviles.infoClassico"
    tools:showIn="@layout/activity_info_classico">

    <TextView
        android:text="Classico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/textView108"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:textColor="#000" />

    <TextView
        android:text="Horario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView109"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:id="@+id/textView110"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:text="Jueves a Sabado de 9:00pm a 2:00am"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView110"
        android:layout_alignParentStart="true"
        android:id="@+id/textView111"
        android:textSize="18sp"
        android:textColor="#000" />

    <TextView
        android:text="Direccion:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView111"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:id="@+id/textView112"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:text="Río Orinoco 105, Del Valle, 66220 San Pedro Garza García, N.L."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView112"
        android:layout_alignParentStart="true"
        android:id="@+id/textView113"
        android:textSize="18sp"
        android:textColor="#000" />

    <Button
        android:text="VER EN MAPA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button16" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/classico_ed"
        android:id="@+id/imageView15"
        android:layout_marginBottom="137dp"
        android:layout_above="@+id/button16"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Es un lugar gigante que esta decorado espectacularmente con un gran candelabro en el centro que se ilumina con las luces de disco, cuenta con varias barras para no hacer esperar a la gente."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView109"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_alignBottom="@+id/imageView15"
        android:layout_alignParentStart="true" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_info_republica"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    tools:context="com.example.mario.dispositivosmoviles.infoRepublica"
    tools:showIn="@layout/activity_info_republica">

    <TextView
        android:text="Republica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:id="@+id/textView84"
        android:textStyle="normal|bold"
        android:textSize="22sp"
        android:textColor="#000" />

    <TextView
        android:text="@string/horario_repu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView87"
        android:textSize="18sp"
        android:layout_alignTop="@+id/textView86"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:textColor="#000" />

    <TextView
        android:text="@string/direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView87"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:id="@+id/textView88"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:text="@string/direccion_repu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView88"
        android:layout_alignParentStart="true"
        android:id="@+id/textView89"
        android:textSize="18sp"
        android:textColor="#000" />

    <Button
        android:text="@string/ver_mapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/button12" />

    <TextView
        android:text="@string/horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView86"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_above="@+id/button12"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="159dp" />

    <TextView
        android:text="@string/repu_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView85"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_above="@+id/textView87"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/republica_ed"
        android:id="@+id/imageView11"
        android:layout_above="@+id/textView87"
        android:layout_alignParentStart="true" />
</RelativeLayout>
